# Parts MCP Configuration
# Copy this file to .env and fill in your API keys

# Source Parts API Configuration
SOURCE_PARTS_API_KEY=your_source_parts_api_key_here
SOURCE_PARTS_API_URL=https://api.sourceparts.com/v1

# Cache Configuration
PARTS_CACHE_DIR=~/.cache/parts-mcp
CACHE_EXPIRY_HOURS=24

# KiCad Configuration
# Comma-separated paths where KiCad projects are stored
KICAD_SEARCH_PATHS=~/Documents/KiCad,~/Projects/Electronics

# Search Configuration
DEFAULT_PAGE_SIZE=20
MAX_RESULTS=100

# Search Configuration  
SEARCH_TIMEOUT=30  # Timeout in seconds for API calls